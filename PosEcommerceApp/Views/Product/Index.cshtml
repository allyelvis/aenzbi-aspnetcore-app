@model IEnumerable<Product>

<h2>Products</h2>
<table>
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Details</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Price</td>
                <td>@item.Stock</td>
                <td><a href="@Url.Action("Details", new { id = item.Id })">View</a></td>
            </tr>
        }
    </tbody>
</table>
